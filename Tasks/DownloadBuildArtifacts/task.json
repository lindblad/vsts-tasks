{
  "id": "a433f589-fce1-4460-9ee6-44a624aeb1fb",
  "name": "DownloadBuildArtifacts",
  "friendlyName": "Download Artifacts - Build",
  "description": "Download build artifacts",
  "helpMarkDown": "",
  "category": "Utility",
  "author": "Microsoft Corporation",
  "preview": true,
  "version": {
    "Major": 0,
    "Minor": 1,
    "Patch": 58
  },
  "demands": [],
  "inputs": [
    {
      "name": "project",
      "type": "pickList",
      "label": "Project",
      "defaultValue": "$(System.TeamProjectId)",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "Select the project name"
    },
    {
      "name": "definition",
      "type": "pickList",
      "label": "Build definition",
      "defaultValue": "",
      "required": false,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "Select the build definition name"
    },
    {
      "name": "buildId",
      "type": "pickList",
      "label": "Build",
      "defaultValue": "$(Build.BuildId)",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "helpMarkDown": "Select the build number"
    },
    {
      "name": "downloadType",
      "type": "radio",
      "label": "Download Type",
      "defaultValue": "single",
      "required": true,
      "helpMarkDown": "Download specific or multiple artifacts matching pattern.",
      "options": {
          "single": "Single Artifact",
          "multiple": "All Artifacts"
      }
    },
    {
      "name": "artifactName",
      "type": "pickList",
      "label": "Artifact name",
      "defaultValue": "drop",
      "required": true,
      "properties": {
        "EditableOptions": "True"
      },
      "visibleRule": "downloadType == single",
      "helpMarkDown": "The name of the artifact to download"
    },
    {
      "name": "itemPattern",
      "type": "string",
      "label": "Matching Pattern",
      "defaultValue": "**",
      "required": false,
      "visibleRule": "downloadType == multiple",
      "helpMarkDown": "Minimatch pattern to filter files to be downloaded."
    },
    {
      "name": "downloadPath",
      "type": "string",
      "label": "Destination directory",
      "defaultValue": "$(System.ArtifactsDirectory)",
      "required": true,
      "helpMarkDown": "Path on the agent machine where the artifacts will be downloaded"
    }
  ],
  "dataSourceBindings": [
    {
      "endpointId": "tfs:teamfoundation",
      "target": "project",
      "endpointUrl": "{{endpoint.url}}/_apis/projects",
      "resultSelector": "jsonpath:$.value[?(@.state=='wellFormed')]",
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
    },
    {
      "endpointId": "tfs:teamfoundation",
      "target": "definition",
      "endpointUrl": "{{endpoint.url}}/{{project}}/_apis/build/definitions",
      "resultSelector": "jsonpath:$.value[?(@.quality=='definition')]",
      "parameters": {
          "project": "$(project)"
      },
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
    },
    {
      "endpointId": "tfs:teamfoundation",
      "target": "buildId",
      "endpointUrl": "{{endpoint.url}}/{{project}}/_apis/build/builds?definitions={{definition}}&resultFilter=succeeded,partiallySucceeded&$top=200",
      "resultSelector": "jsonpath:$.value[*]",
      "parameters": {
          "project": "$(project)",
          "definition": "$(definition)"
      },
      "resultTemplate": "{ \"Value\" : \"{{{id}}}\", \"DisplayValue\" : \"{{{buildNumber}}}\" }"
    },
    {
      "endpointId": "tfs:teamfoundation",
      "target": "artifactName",
      "endpointUrl": "{{endpoint.url}}/{{project}}/_apis/build/builds/{{buildId}}/artifacts",
      "resultSelector": "jsonpath:$.value[*]",
      "parameters": {
          "project": "$(project)",
          "buildId": "$(buildId)"
      },
      "resultTemplate": "{ \"Value\" : \"{{{name}}}\", \"DisplayValue\" : \"{{{name}}}\" }"
    }
  ],
  "instanceNameFormat": "Download Artifacts - Build",
  "execution": {
    "Node": {
      "target": "main.js",
      "argumentFormat": ""
    }
  },
  "messages": {
    "DownloadArtifacts": "Downloading artifacts from: %s",
    "LinkedArtifactCount": "Linked artifacts count:  %s",
    "FileContainerInvalidArtifactData": "Invalid file container artifact. Resource data must be in the format #/{container id}/path",
    "UnsupportedArtifactType" :"Unsupported artifact type: %s",
    "NoBuildsFound": "No builds found for build definition id: %s",
    "BuildIdBuildDefinitionMismatch": "Build with id %s not found for build definition id %s"
  }
}